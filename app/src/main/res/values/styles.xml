<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Label">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_label</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:fontFamily">@font/marselis_pro</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.L1" parent="AppTheme.Label">
        <item name="android:layout_marginStart">@dimen/spacing_all_medium</item>
        <item name="android:layout_marginEnd">@dimen/spacing_all_medium</item>
    </style>

    <style name="TextInputLayout.CustomUnderline" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/AppTheme.HintTextAppearance</item>
        <item name="android:textColorHint">@color/bright_grey</item>
        <item name="colorControlNormal">@color/gold_lighter</item>
        <item name="colorControlActivated">@color/maroon</item>
        <item name="colorControlHighlight">@color/maroon</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/text_size_subtext_s3</item>
    </style>

    <style name="AppTheme.HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColorHint">@color/gold_lighter</item>
        <item name="android:textColor">@color/gold_lighter</item>
        <item name="android:colorControlNormal">@color/red</item>
        <item name="android:colorControlHighlight">@color/red</item>
        <item name="android:colorControlActivated">@color/red</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <style name="AppTheme.HintTextAppearance.Filled">
        <item name="android:textColorHint">@color/bright_grey</item>
        <item name="android:textColor">@color/bright_grey</item>
    </style>

    <style name="AppTheme.HintTextAppearance.UnFilled">
        <item name="android:textColorHint">@color/gold_lighter</item>
        <item name="android:textColor">@color/gold_lighter</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/din_bold</item>
        <item name="backgroundTint">@drawable/button_background_color</item>
        <item name="android:minHeight">40dp</item>
        <item name="cornerRadius">@dimen/spacing_all_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/spacing_all_medium_small</item>
        <item name="android:paddingRight">@dimen/spacing_all_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_all_medium_small</item>
        <item name="android:paddingLeft">@dimen/spacing_all_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.ErrorTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/maroon</item>
        <item name="android:fontFamily">@font/din_regular</item>
    </style>

    <style name="AppTheme.EditText" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/text_size_subtext_s3</item>
        <item name="android:fontFamily">@font/din_regular</item>
        <item name="colorControlNormal">@color/bright_grey</item>
        <item name="colorControlActivated">@color/maroon</item>
        <item name="android:textCursorDrawable">@drawable/text_input_cursor</item>
    </style>

    <style name="AppTheme.Profile.Title.RadioButton" parent="@android:style/Widget.CompoundButton">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">@dimen/spacing_all_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_all_medium</item>
        <item name="android:paddingLeft">@dimen/spacing_all_medium</item>
    </style>

    <style name="AppTheme.Button.OutlinedButton">
        <item name="strokeColor">@color/white</item>
        <item name="cornerRadius">@dimen/spacing_all_small</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="strokeWidth">@dimen/button_stroke_width</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

</resources>
